@{
    ViewBag.Title = "JSON Post";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <button type="button" class="btn btn-default" onclick="jsonPostToAspMvcController()">Send</button>
    </div>

    <script>
        function jsonPostToAspMvcController()
        {
            var data = {
                input: "Hello, I am controller and I am receiving JSON correctly ."
            };

            $.ajax({
                url: '/Home/testJsonPost',
                type: "post",
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    alert(response);
                },
                error: function (e) {
                    alert("Server errror");
                }
            });

        }
    </script>
</div>